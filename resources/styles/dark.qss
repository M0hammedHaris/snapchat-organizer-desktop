}

QRadioButton::indicator {
    border-radius: 9px;
}

QRadioButton::indicator:checked {
    background-color: #FFFC00;
    border: 4px solid #0f0f0f;
}

/* ProgressBar */
QProgressBar {
    border: 1px solid #27272a;
    border-radius: 6px;
    text-align: center;
    background-color: #0f0f0f;
    color: #FFFFFF;
}

QProgressBar::chunk {
    background-color: #FFFC00;
    border-radius: 5px;
}

/* ScrollBar */
QScrollBar:vertical {
    border: none;
    background: #0a0a0a;
    width: 10px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #3f3f46;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background: #0a0a0a;
    height: 10px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background: #3f3f46;
    min-width: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Menu Bar */
QMenuBar {
    background-color: #0a0a0a;
    color: #FFFFFF;
    border-bottom: 1px solid #27272a;
}

QMenuBar::item {
    spacing: 3px;
    padding: 6px 10px;
    background: transparent;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #27272a;
}

QMenu {
    background-color: #0f0f0f;
    color: #FFFFFF;
    border: 1px solid #27272a;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 10px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: #FFFC00;
    color: #000000;
}

QMenu::separator {
    height: 1px;
    background-color: #27272a;
    margin: 4px 0px;
}

/* ToolTip */
QToolTip {
    border: 1px solid #27272a;
    background-color: #0f0f0f;
    color: #FFFFFF;
    padding: 4px;
    border-radius: 4px;
    opacity: 200;
}

/* Header View */
QHeaderView::section {
    background-color: #0f0f0f;
    color: #FFFFFF;
    padding: 6px;
    border: 1px solid #27272a;
}

/* Table View */
QTableView {
    background-color: #0a0a0a;
    color: #FFFFFF;
    gridline-color: #27272a;
    selection-background-color: #27272a;
    selection-color: #FFFC00;
}

/* Tool Button */
QPushButton[class="ToolButton"] {
    text-align: left;
    padding: 15px;
    border: 2px solid #27272a;
    border-radius: 8px;
    background-color: #0f0f0f;
    font-size: 13px;
    font-weight: normal;
}

QPushButton[class="ToolButton"]:hover {
    border-color: #FFFC00;
    background-color: #27272a;
}

QPushButton[class="ToolButton"]:pressed {
    background-color: #0a0a0a;
}

QPushButton[class="ToolButton"]:disabled {
    background-color: #0a0a0a;
    color: #52525b;
    border-color: #0f0f0f;
}

/* Styled Group Box */
QGroupBox[class="StyledGroupBox"] {
    border: 1px solid #27272a;
    border-radius: 8px;
    background-color: transparent;
    font-weight: bold;
    padding-top: 15px;
    margin-top: 10px;
}
